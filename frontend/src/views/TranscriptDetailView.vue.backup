function syncScroll() {
  if (!textarea.value || timecodeMarkers.value.length === 0) return

  const scrollTop = textarea.value.scrollTop
  const scrollHeight = textarea.value.scrollHeight
  const clientHeight = textarea.value.clientHeight

  if (scrollHeight <= clientHeight) {
    activeTimecodeIndex.value = 0
    return
  }

  const scrollPercent = scrollTop / (scrollHeight - clientHeight)
  const contentLength = currentTranscript.value.content.length
  const estimatedCharPos = Math.floor(scrollPercent * contentLength)

  let closestIndex = 0
  let minDistance = Infinity

  for (let i = 0; i < timecodeMarkers.value.length; i++) {
    const distance = Math.abs(timecodeMarkers.value[i].charPosition - estimatedCharPos)
    if (distance < minDistance) {
      minDistance = distance
      closestIndex = i
    }
  }

  if (closestIndex !== activeTimecodeIndex.value) {
    activeTimecodeIndex.value = closestIndex
    console.log('ğŸ• æ™‚é–“ç¢¼æ›´æ–°:',
      timecodeMarkers.value[closestIndex].label,
      `(${closestIndex + 1}/${timecodeMarkers.value.length})`,
      `å­—å…ƒä½ç½®: ${estimatedCharPos}/${contentLength}`
    )
  }
}

// éµç›¤å¿«æ·éµ
function handleKeyboardShortcuts(event) {
  if (!currentTranscript.value.hasAudio || !audioElement.value) return

  // æª¢æŸ¥æ˜¯å¦æ­£åœ¨ç·¨è¼¯æ–‡å­—ï¼ˆé¿å…å¹²æ“¾ç·¨è¼¯ï¼‰
  const isEditingText = isEditing.value || isEditingTitle.value
  const targetIsInput = event.target.tagName === 'INPUT' ||
                        event.target.tagName === 'TEXTAREA' ||
                        event.target.isContentEditable

  // å¦‚æœæ­£åœ¨ç·¨è¼¯è¼¸å…¥æ¡†ï¼Œä¸è™•ç†å¿«æ·éµ
  if (isEditingText && targetIsInput) return

  // Alt + éµçµ„åˆï¼ˆç·¨è¼¯å’Œéç·¨è¼¯æ¨¡å¼éƒ½å¯ç”¨ï¼‰
  if (event.altKey && !event.ctrlKey && !event.metaKey) {
    switch(event.key) {
      case 'k':
      case 'K':
        event.preventDefault()
        togglePlayPause()
        break
      case 'j':
      case 'J':
      case 'ArrowLeft':
        event.preventDefault()
        skipBackward()
        break
      case 'l':
      case 'L':
      case 'ArrowRight':
        event.preventDefault()
        skipForward()
        break
      case 'm':
      case 'M':
        event.preventDefault()
        toggleMute()
        break
    }
    return
  }

  // éç·¨è¼¯æ¨¡å¼ä¸‹çš„å¿«æ·éµï¼ˆä¸éœ€è¦ Altï¼‰
  if (!isEditingText && !event.altKey && !event.ctrlKey && !event.metaKey) {
    switch(event.key) {
      case ' ':  // ç©ºç™½éµï¼šæ’­æ”¾/æš«åœ
      case 'k':
      case 'K':
        event.preventDefault()
        togglePlayPause()
        break
      case 'j':  // Jï¼šå¾Œé€€ 10 ç§’
      case 'J':
        event.preventDefault()
        skipBackward()
        break
      case 'l':  // Lï¼šå‰é€² 10 ç§’
      case 'L':
        event.preventDefault()
        skipForward()
        break
      case 'ArrowLeft':  // å·¦ç®­é ­ï¼šå¾Œé€€ 10 ç§’
        event.preventDefault()
        skipBackward()
        break
      case 'ArrowRight':  // å³ç®­é ­ï¼šå‰é€² 10 ç§’
        event.preventDefault()
        skipForward()
        break
      case 'm':  // Mï¼šéœéŸ³åˆ‡æ›
      case 'M':
        event.preventDefault()
        toggleMute()
        break
    }
  }
}
