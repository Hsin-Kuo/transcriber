// ä¿®å¾©å­—å¹•æ¨¡å¼ç·¨è¼¯æ™‚çš„æ»¾å‹•å•é¡Œ
function fixSubtitleScrolling() {
  const wrapper = document.querySelector('.subtitle-table-wrapper')
  if (!wrapper) return

  // ç›£è½æ‰€æœ‰ contenteditable å–®å…ƒæ ¼çš„æ»¾è¼ªäº‹ä»¶
  const handleWheel = (e) => {
    // è¨ˆç®—æ»¾å‹•è·é›¢
    const delta = e.deltaY

    // æ‰‹å‹•æ»¾å‹• wrapper
    wrapper.scrollTop += delta

    // é˜»æ­¢é»˜èªè¡Œç‚ºï¼Œé¿å…é é¢æ»¾å‹•
    e.preventDefault()
  }

  // ç‚ºæ‰€æœ‰ contenteditable å–®å…ƒæ ¼æ·»åŠ æ»¾è¼ªç›£è½å™¨
  const addScrollListeners = () => {
    const editableCells = wrapper.querySelectorAll('.col-content[contenteditable="true"]')
    editableCells.forEach(cell => {
      cell.addEventListener('wheel', handleWheel, { passive: false })
    })
  }

  // åˆå§‹æ·»åŠ 
  addScrollListeners()

  // ç›£è½ DOM è®ŠåŒ–ï¼Œé‡æ–°æ·»åŠ ç›£è½å™¨
  const observer = new MutationObserver(() => {
    addScrollListeners()
  })

  observer.observe(wrapper, {
    childList: true,
    subtree: true,
    attributes: true,
    attributeFilter: ['contenteditable']
  })
}

