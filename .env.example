# ===== MongoDB 配置 =====
# MongoDB 連接字串
MONGODB_URL="mongodb://localhost:27017"
# 資料庫名稱
MONGODB_DB_NAME="whisper_transcriber"
# MongoDB Root 密碼（Docker 部署時使用）
MONGODB_ROOT_PASSWORD="change_me_to_strong_password"

# ===== JWT 配置 =====
# JWT Secret Key（生成方式: openssl rand -hex 32）
JWT_SECRET_KEY="change_me_to_random_32_bytes_minimum"
# JWT 演算法
JWT_ALGORITHM="HS256"
# Access Token 過期時間（分鐘）
ACCESS_TOKEN_EXPIRE_MINUTES="15"
# Refresh Token 過期時間（天）
REFRESH_TOKEN_EXPIRE_DAYS="30"

# ===== CORS 配置 =====
# 允許的來源（逗號分隔，生產環境請設定為實際域名）
CORS_ORIGINS="http://localhost:3000,http://localhost:5173"

# ===== Google API Keys =====
# 支援多個 API Keys，系統會自動輪詢使用
# 如果某個 Key 失敗，會自動切換到下一個 Key

# 方式 1：使用多個編號的 Keys（推薦）
GOOGLE_API_KEY_1="your_google_api_key_1_here"
GOOGLE_API_KEY_2="your_google_api_key_2_here"
GOOGLE_API_KEY_3="your_google_api_key_3_here"
# ... 可以繼續添加更多 Keys (GOOGLE_API_KEY_4, GOOGLE_API_KEY_5, ...)

# 方式 2：使用單一 Key（向後兼容）
# GOOGLE_API_KEY="your_google_api_key_here"

# ===== OpenAI API Key =====
# 可選，用於標點符號處理
OPENAI_API_KEY="your_openai_api_key_here"

# ===== Hugging Face Token =====
# 用於 Speaker Diarization 功能
HF_TOKEN="your_huggingface_token_here"
